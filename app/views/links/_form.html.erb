<%= form_for(link) do |f| %>
  <% if link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Insert number below at the end of this url "http://localhost:3000/"' %>
    <%= f.number_field :in_url, value: rand(100)%>
  </div>

  <div class="field">
    <div style="font-width: bold;">
      <strong>Please put full url. (Ex: https://www.facebook.com/)</strong>
    </div>
    <%= f.text_area :out_url %>
  </div>

  <div class="field">
    <!-- <%= f.label :http_status %> -->
    <%= f.hidden_field :http_status %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
