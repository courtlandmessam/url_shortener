<%= form_for(link) do |f| %>
  <% if link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :in_url %>
    <%= f.number_field :in_url, value: rand(100), :disabled=>true %>
  </div>

  <div class="field">
    <%= f.label :out_url %>
    <%= f.text_area :out_url %>
  </div>

  <div class="field">
    <!-- <%= f.label :http_status %> -->
    <%= f.hidden_field :http_status %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
